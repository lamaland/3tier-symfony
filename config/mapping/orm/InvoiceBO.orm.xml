<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Tier\BO\InvoiceBO" table="invoice">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
            <sequence-generator sequence-name="tablename_seq" allocation-size="100" initial-value="1" />
        </id>

        <many-to-one field="idClient" target-entity="ClientBO">
            <join-column name="idClient" referenced-column-name="id" nullable="false"/>
        </many-to-one>

        <field name="date" column="date" type="string" nullable="true"/>
        <field name="quantity" column="quantity" type="integer" nullable="true"/>

    </entity>

</doctrine-mapping>